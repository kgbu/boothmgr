<h1>試合リスト</h1>

<table>
  <tr>
    <th>試合日時</th>
    <th>内容</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.kickoff.to_s(:short) %></td>
    <td><%=h game.title %><br />
    [<%= link_to 'Show', game %>]
<% if session[:member_id] %>
    [<%= link_to 'Edit', edit_game_path(game) %>]
    [<%= link_to 'Delete', game, :confirm => 'Are you sure?', :method => :delete %>]
<% end %>
</td>
  </tr>
  <tr><td colspan="2">-----------------</td></tr>
<% end %>
</table>

<br />
<% if session[:member_id] %>
<%= link_to 'New game', new_game_path %>
<% end %>
